<!-- Cards de Resumen Categoría -->
<div id="cards_resumen_categoria" class="row mb-4">
</div>

<!-- Filtros de Categoría -->
<div class="card shadow mb-3">
  <div class="card-body">
    <div class="row">
      <div class="col-lg-3 col-md-6 mb-2">
        <label class="font-weight-bold">Referencia</label>
        <input type="text" class="form-control form-control-lg" id="refFilter" onchange="aplicarFiltrosCategoria();" placeholder="Filtrar..."/>
      </div>
      <div class="col-lg-3 col-md-6 mb-2">
        <label class="font-weight-bold">Talla</label>
        <input type="text" class="form-control form-control-lg" id="tallaFilter" onchange="aplicarFiltrosCategoria();" placeholder="Filtrar..."/>
      </div>
      <div class="col-lg-3 col-md-6 mb-2">
        <label class="font-weight-bold">Color</label>
        <input type="text" class="form-control form-control-lg" id="colorFilter" onchange="aplicarFiltrosCategoria();" placeholder="Filtrar..."/>
      </div>
    </div>
  </div>
</div>

<!-- Detalle de Productos por Categoría -->
<div class="card shadow">
  <div class="card-header bg-dark text-white">
    <h3 class="card-title"><i class="fas fa-list"></i> Detalle de Productos</h3>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table id="details_categoria" class="table table-hover table-sm table-bordered mb-0">
        <thead class="thead-light">
          <tr>
            <th>Categoria</th>
            <th>Referencia</th>
            <th>Talla</th>
            <th>Color</th>
            <th class="text-center">Cantidad</th>
            <th class="text-right">Valor</th>
          </tr>
        </thead>
        <tbody id="detail_data_categoria">
        </tbody>
      </table>
    </div>
  </div>
</div>