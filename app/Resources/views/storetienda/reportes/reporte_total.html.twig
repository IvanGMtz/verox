<!-- Filtro por Asesor -->
<div id="asesorSelector2" class="card shadow mb-3" style="display:none;">
  <div class="card-body">
    <div class="row">
      <div class="col-lg-3 col-md-6">
        <label class="font-weight-bold">Filtrar por Asesor</label>
        <select id="asesores2" class="form-control form-control-lg" onchange="cambiarAsesor()">
          <option value="TODOS" selected>Todos</option>
          {% for asesor in asesores %}
            <option value="{{ asesor }}">{{ asesor }}</option>
          {% endfor %}
        </select>
      </div>
    </div>
  </div>
</div>

